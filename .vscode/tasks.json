{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo: build",
      "type": "shell",
      "command": "${env:HOME}/.cargo/bin/cargo",
      "args": ["build"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "app: run (after build)",
      "type": "shell",
      "command": "${workspaceFolder}/target/debug/rcarve",
      "dependsOn": ["cargo: build"],
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "focus": true
      }
    }
  ]
}
